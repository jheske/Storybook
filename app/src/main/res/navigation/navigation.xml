<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.compose.storybook.ui.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_inputsFragment"
            app:destination="@id/inputsFragment" />
    </fragment>

    <fragment
        android:id="@+id/inputsFragment"
        android:name="com.example.compose.storybook.ui.inputs.InputsFragment"
        tools:layout="@layout/fragment_inputs">
        <action
            android:id="@+id/action_inputsFragment_to_buttonFragment"
            app:destination="@id/buttonFragment" />
    </fragment>

    <fragment
        android:id="@+id/buttonFragment"
        android:name="com.example.compose.storybook.ui.inputs.ButtonFragment"
        android:label="@string/button"/>
</navigation>